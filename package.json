{
  "name": "basic-ssg",
  "version": "0.1.9",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./plugins/ejs": "./dist/core/plugins/ejs.js",
    "./plugins/tailwind": "./dist/core/plugins/tailwind.js",
    "./plugins/sitemap": "./dist/core/plugins/sitemap.js",
    "./plugins/blog": "./dist/core/plugins/blog.js",
    "./plugins/article": "./dist/core/plugins/article.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgramaciotti/basic-ssg.git"
  },
  "bugs": {
    "url": "https://github.com/dgramaciotti/basic-ssg/issues"
  },
  "homepage": "https://github.com/dgramaciotti/basic-ssg#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "mkdir -p dist && nx run-many -t build && tsc && cp -R packages/templates dist/templates",
    "clean": "rm -rf dist dist-site temp pages *.tsbuildinfo packages/*/*.tsbuildinfo .nx",
    "version:patch": "pnpm version patch --no-git-tag-version && git tag v$(node -p \"require('./package.json').version\")",
    "version:minor": "pnpm version minor --no-git-tag-version && git tag v$(node -p \"require('./package.json').version\")",
    "version:major": "pnpm version major --no-git-tag-version && git tag v$(node -p \"require('./package.json').version\")",
    "publish:all": "pnpm -r publish --access public"
  },
  "bin": {
    "basic-ssg": "bin/basic-ssg.js"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "SS",
    "static",
    "site",
    "generation",
    "website",
    "builder"
  ],
  "author": "Daniel Guedes",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@basic-ssg/core": "workspace:*",
    "@basic-ssg/plugin-assets": "workspace:*",
    "@basic-ssg/plugin-google-docs": "workspace:*",
    "@types/markdown-it": "^14.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "tailwindcss": "^4.1.18",
    "through2": "^4.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nx/eslint": "22.4.1",
    "@nx/vitest": "22.4.1",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/turndown": "^5.0.6",
    "@vitest/coverage-istanbul": "^4.0.16",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "nx": "22.4.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.16"
  }
}
