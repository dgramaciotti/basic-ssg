{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "packages",
    "outDir": "dist",

    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts"]
}
